" local syntax file - set colors on a per-machine basis:
" vim: tw=0 ts=4 sw=4
" Vim color file
" Maintainer:	Saptarshi Mondal
" Last Change:	2010 Feb 04

hi clear
set background=dark
if exists("syntax_on")
  syntax reset
endif
let g:colors_name = "my_colors"

																						
highlight Comment			ctermfg=grey							guifg=#c1c1ff         			gui=italic
highlight Constant			ctermfg=red		 						guifg=#ff8000					gui=none
highlight Identifier 		ctermfg=white							guifg=cyan
highlight Statement  		ctermfg=cyan			 				guifg=#c0c000			  		gui=bold
highlight PreProc	 		ctermfg=blue					  		guifg=#00ff00
highlight Type		 		ctermfg=green							guifg=green 					gui=bold
highlight Special	 		ctermfg=red					  			guifg=#0000ff
highlight Error				ctermbg=red												guibg=#ff0000
highlight Todo		 		ctermfg=brown							guifg=#000080 	guibg=#c0c000
highlight Directory  		ctermfg=darkblue					  	guifg=#00c000
highlight StatusLine 		ctermfg=magenta		ctermbg=white  		guifg=#ffff00 	guibg=#0000ff 	gui=none
highlight Normal									  				guifg=cyan		guibg=#000000	
highlight Search			ctermfg=cyan		ctermbg=yellow						guibg=#c0c000
highlight Function			ctermfg=darkmagenta						guifg=#cd325c					gui=bold
highlight Conditional		ctermfg=green							guifg=green   					gui=bold
highlight Statement			ctermbg=green							guifg=green   					gui=bold
highlight Repeat			ctermbg=green							guifg=green   					gui=bold
highlight String			ctermbg=grey							guifg=#ff80ff 
highlight Include			ctermfg=white							guifg=#efe0e0
highlight LineNr			ctermfg=white							guifg=white
highlight Braces			ctermfg=white							guifg=white
highlight SpecialOperator	ctermfg=white							guifg=white
highlight cursorline 																guibg=red
