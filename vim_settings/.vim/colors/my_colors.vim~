" local syntax file - set colors on a per-machine basis:
" vim: tw=0 ts=4 sw=4
" Vim color file
" Maintainer:	Saptarshi Mondal
" Last Change:	2010 Feb 04

hi clear
set background=dark
if exists("syntax_on")
  syntax reset
endif
let g:colors_name = "my_colors"

																						
highlight Comment		ctermfg=lightblue					guifg=#c1c1ff         			gui=italic
highlight Constant		ctermfg=none		cterm=none 		guifg=#ff8000					gui=none
highlight Identifier 	ctermfg=6						  	guifg=cyan
highlight Statement  	ctermfg=3			cterm=bold 		guifg=#c0c000			  		gui=bold
highlight PreProc	 	ctermfg=10						  	guifg=#00ff00
highlight Type		 	ctermfg=green						guifg=green 					gui=bold
highlight Special	 	ctermfg=12						  	guifg=#0000ff
highlight Error					ctermbg=9				guibg=#ff0000
highlight Todo		 	ctermfg=4	ctermbg=3			  	guifg=#000080 	guibg=#c0c000
highlight Directory  	ctermfg=2						  	guifg=#00c000
highlight StatusLine 	ctermfg=11 ctermbg=12 cterm=none 	guifg=#ffff00 	guibg=#0000ff 	gui=none
highlight Normal									  	guifg=cyan guibg=#000000	
highlight Search				ctermbg=3								guibg=#c0c000
highlight Function				ctermbg=darkmagenta			  guifg=#cd325c					gui=bold
highlight Conditional				ctermbg=green			  guifg=green   				gui=bold
highlight Statement				ctermbg=green			  guifg=green   					gui=bold
highlight Repeat				ctermbg=green			  guifg=green   					gui=bold
highlight String				ctermbg=none			  guifg=#ff80ff 
highlight Include				ctermbg=none			  guifg=#efe0e0
highlight LineNr				ctermbg=none			  guifg=white
highlight Braces				ctermbg=none			  guifg=white
highlight SpecialOperator		ctermbg=none			  guifg=white
highlight cursorline 						guibg=red
