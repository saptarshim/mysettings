" local syntax file - set colors on a per-machine basis:
" vim: tw=0 ts=4 sw=4
" Vim color file
" Maintainer:	Saptarshi Mondal
" Last Change:	2010 Feb 04

hi clear
set background=dark
if exists("syntax_on")
  syntax reset
endif
let g:colors_name = "my_colors"

																						
highlight Comment		guifg=#c1c1ff         			gui=italic
highlight Constant		guifg=#ff8000					gui=none
highlight Identifier 	guifg=cyan
highlight Statement  	guifg=#c0c000			  		gui=bold
highlight PreProc	 	guifg=#00ff00
highlight Type		 	guifg=green 					gui=bold
highlight Special	 	guifg=#0000ff
highlight Error			guibg=#ff0000
highlight Todo		 	guifg=#000080 	guibg=#c0c000
highlight Directory  	guifg=#00c000
highlight StatusLine 	guifg=#ffff00 	guibg=#0000ff 	gui=none
highlight Normal		guifg=cyan		guibg=#000000	
highlight Search						guibg=#c0c000
highlight Function		guifg=#cd325c					gui=bold
highlight Conditional	guifg=green   					gui=bold
highlight Statement		guifg=green   					gui=bold
highlight Repeat		guifg=green   					gui=bold
highlight String		guifg=#ff80ff 
highlight Include		guifg=#efe0e0
highlight LineNr		guifg=white
highlight Braces		guifg=white
highlight SpecialOperator   guifg=white
highlight cursorline 					guibg=red
